    Heitor Sousa -->
    <?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="DiceImage"
                Source="dice.png"
                HeightRequest="185"
                Aspect="AspectFit"
                />

            <Picker x:Name="NumPicker">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>1</x:String>
                        <x:String>2</x:String>
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button
                x:Name="DiceButton"
                Text="GUESS"
                Clicked="DiceButton_Clicked"
                />
            <Label
                x:Name="VictoryLabel"
                Text="Vitorias: "
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
            <Label
                x:Name="StreakLabel"
                Text="Sequência de Vitorias: "
                VerticalOptions="Center"
                HorizontalOptions="Center"
             />
            <Label
                x:Name="SumSidesLabel"
                Text="Soma dos Lados Opostos: "
                VerticalOptions="Center"
                HorizontalOptions="Center"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
